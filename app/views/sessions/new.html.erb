<%= form_with url: sign_in_path, scope: :session do |f| %>
  <h1><%= t("auth.sign_in.title") %></h1>
  <div class="field">
    <%= f.label :email, t("auth.sign_in.email") %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t("auth.sign_in.password") %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t("auth.sign_in.submit") %>
  </div>
<% end %>
